{
    "compilerOptions": {
      "composite": true,          // necesario si usas project references (opcional)
      "declaration": true,        // genera archivos .d.ts
      "declarationMap": true,     // Ãºtil para debug
      "emitDeclarationOnly": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "target": "ES2020",
